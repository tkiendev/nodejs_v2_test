<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update A User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a class="" href="/create">create user</a>
        <a class="active" href="/create">update user</a>
        <a href="/sample">sample</a>
        <a href="#about">About</a>
    </div>
    <div class="form-add-new" id="form">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend>Update A User:</legend>
                <div class="input-group d-none">
                    <label for="">Id </label>
                    <input type="text" value="<%= userEdit.id %>" name="id" />
                </div>
                <div class="input-group">
                    <label for="">Email </label>
                    <input type="text" placeholder="Email" name="email" value="<%= userEdit.email %>" />
                </div>
                <div class="input-group">
                    <label for="">Name </label>
                    <input type="text" placeholder="Name" name="myname" value="<%= userEdit.name %>" />
                </div>
                <div class="input-group">
                    <label for="">City </label>
                    <input type="text" placeholder="City" name="city" value="<%= userEdit.city %>" />
                </div>
                <button class="btn">Update</button>
            </fieldset>
        </form>
    </div>
</body>

</html>